<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_background"
    >

    <!-- FrameLayout to hold fragment views -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1.5"
        android:background="@color/primary_background"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/fullname"
                    android:textAlignment="textStart"
                    android:textColor="@color/light_accent"
                    android:textSize="20sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/email"
                android:textAlignment="textStart"
                android:textColor="@color/light_accent"
                android:textSize="15sp"
                android:layout_marginStart="10sp"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/myImageButton"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:layout_marginEnd="25sp"
            android:layout_marginTop="5sp"
            android:contentDescription="Button Icon"
            android:src="@drawable/empty_profile"
            android:scaleType="fitCenter"
            />

    </RelativeLayout>


    <!-- Tab Buttons Layout at the Bottom -->
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1sp"
        android:layout_weight="12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="50sp"
        android:background="@color/primary_background"
        >

        <Button
            android:id="@+id/tab_homepage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Homepage"
            android:textSize="15sp"
            android:padding="0dp"
            android:textColor="@color/light_accent"
            android:backgroundTint="@color/primary_background"
            />

        <Button
            android:id="@+id/tab_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search"
            android:textSize="15sp"
            android:padding="0dp"
            android:textColor="@color/light_accent"
            android:backgroundTint="@color/primary_background"
            />

        <Button
            android:id="@+id/tab_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Orders"
            android:textSize="15sp"
            android:padding="0dp"
            android:textColor="@color/light_accent"
            android:backgroundTint="@color/primary_background"
            />

        <Button
            android:id="@+id/tab_rewards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rewards"
            android:textSize="15sp"
            android:padding="0dp"
            android:textColor="@color/light_accent"
            android:backgroundTint="@color/primary_background"
            />

    </LinearLayout>

</LinearLayout>